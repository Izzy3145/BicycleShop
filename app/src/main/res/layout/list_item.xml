<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_border"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/list_image_view"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:padding="@dimen/small_border"
        android:src="@drawable/bicycle_shadow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- bike model -->
        <TextView
            android:id="@+id/model_list_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_border"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/title_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--price of bike -->

                <TextView
                    android:id="@+id/price_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/small_border"
                    android:textColor="@color/secondary_text"
                    android:textSize="@dimen/large_text" />

                <!-- Sale Button -->
                <Button
                    android:id="@+id/sale_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sale" />

            </LinearLayout>

            <!-- quantity remaining-->

            <TextView
                android:id="@+id/quantity_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_border"
                android:textColor="@color/secondary_text"
                android:textSize="@dimen/large_text" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>