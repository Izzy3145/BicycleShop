<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:layout_margin="@dimen/small_border">

    <ImageView
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:id="@+id/list_image_view"
        android:src="@drawable/bicycle_shadow"
        android:padding="@dimen/small_border"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <!-- bike model -->
    <TextView
        android:id="@+id/model_list_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/small_border"
        android:textSize="@dimen/title_text"
        android:textStyle="bold"
        android:textColor="@color/primary_text"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--price of bike -->

            <TextView
                android:id="@+id/price_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_border"
                android:textSize="@dimen/large_text"
                android:textColor="@color/secondary_text"/>

            <!-- Sale Button -->
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sale_button"
                android:text="@string/sale"/>

        </LinearLayout>

        <!-- quantity remaining-->

        <TextView
            android:id="@+id/quantity_list_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_border"
            android:textSize="@dimen/large_text"
            android:textColor="@color/secondary_text"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>