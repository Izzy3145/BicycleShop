<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- product image -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/image_view"/>

    <!-- product model -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bicycle model:"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/model_hint"
        android:id="@+id/model" />

    <!-- product type -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Type:"/>

    <Spinner
        android:id="@+id/spinner_type"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:paddingRight="16dp"
        android:spinnerMode="dropdown"/>

    <!-- product quantity -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Quantity:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/plus_one_stock"
            android:text="@string/plus_sign"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/quantity"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/less_one_stock"
            android:text="@string/minus_sign"/>

        </LinearLayout>

    <!-- product price -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Price:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pound_sign"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/price_hint"
            android:id="@+id/price"/>

    </LinearLayout>

    <!-- product supplier -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Supplier:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/supplier_email_hint"
        android:id="@+id/supplier"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reorder_button"
            android:text="@string/reorder"
            android:onClick="emailSupplier"/>

    </LinearLayout>

</LinearLayout>